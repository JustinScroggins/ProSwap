@model IEnumerable<ProSwap.Data.Game>

@{
    ViewBag.Title = "ProSwap.io";
}

    <div class="body-container">
        <div class="alert alert-dark" role="alert">
            <h1>Games</h1>
        </div>


        <button type="button" class="btn btn-dark" id="gameAddButton"  onclick="window.location='/Games/Create'">Add Game</button>

        <table class="table">
            <tr>
                <th>
                    <h1>@Html.DisplayNameFor(model => model.Name)</h1>
                </th>
                <th>
                    <h1>Currency Name</h1>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>

    </div>
